#!/bin/bash

# List of Pokémon (lowercase for API)
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Create output directory if needed
mkdir -p pokemon_data

# Array to store process IDs
pids=()

# Function to clean up background processes on exit or interruption
cleanup() {
    echo "Interrupt received. Terminating background processes..."
    # Kill all background processes
    kill "${pids[@]}" 2>/dev/null
    exit 1
}

# Set up trap to catch SIGINT (Ctrl+C) and SIGTERM
trap cleanup SIGINT SIGTERM

echo "Starting parallel data fetching for ${#pokemon_list[@]} Pokémon..."

# Fetch data for all Pokémon in parallel using background processes
for pokemon in "${pokemon_list[@]}"; do
    (
        echo "Fetching data for $pokemon..."
        curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "pokemon_data/$pokemon.json"
        if [ $? -eq 0 ]; then
            echo "Saved data to pokemon_data/$pokemon.json ✅"
        else
            echo "Failed to fetch $pokemon ❌"
        fi
    ) &
    pids+=($!)
done

echo "All fetches started. Waiting for completion..."
echo "Process IDs: ${pids[@]}"

# Wait for all background processes to complete
for pid in "${pids[@]}"; do
    wait $pid 2>/dev/null
done

echo "All fetches complete."
