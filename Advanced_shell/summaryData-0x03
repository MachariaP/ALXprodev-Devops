#!/bin/bash

# Output file
report="pokemon_report.csv"

# Header
echo "Name,Height (m),Weight (kg)" > "$report"

# Extract from each JSON
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/^./\u&/')
    height=$(jq -r '.height' "$file" | awk '{print $1 / 10}')
    weight=$(jq -r '.weight' "$file" | awk '{print $1 / 10}')
    echo "$name,$height,$weight" >> "$report"
done

# Print report
echo "CSV Report generated at: $report"
cat "$report"
echo ""

# Calculate averages with awk
awk -F, 'NR>1 {h+=$2; w+=$3; c++} END {printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", h/c, w/c}' "$report"
